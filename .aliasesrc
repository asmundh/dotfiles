# Use powerline

alias q="exit"

alias al="alias"

alias cat="bat"

alias resc="nmcli device wifi rescan"

alias psag='(){ps aux | grep $1}'

alias pacbrowse='pacman -Slq | fzf --multi --preview "pacman -Si {1}"'
alias sp='pacman -Slq | fzf --multi --preview "pacman -Si {1}" | xargs -ro sudo pacman -S'
