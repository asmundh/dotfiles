alias conf='sudo vim ~/dotfiles/rc.lua'
alias bashrc="vim ~/.bashrc"
alias zsh="vim ~/.zshrc"

alias sp='pacman -Slq | fzf --multi --preview "pacman -Si {1}" | xargs -ro sudo pacman -S'
